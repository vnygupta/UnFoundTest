<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.youedufriends.unfoundtest.ReportActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#00FFFB"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/ivVehicle"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
    <TextView
        android:id="@+id/tvVehicleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Vehicle name"
        android:layout_below="@+id/ivVehicle"
        android:textSize="20dp"
        android:textColor="#333359"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvVehicleName"
        android:textColor="#333359"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:hint="Frame"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvPowerTrain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Power Train"
        android:textSize="20dp"
        android:textColor="#333359"
        android:textStyle="bold"
        android:layout_below="@+id/tvFrame"
         />

    <TextView
        android:id="@+id/tvWheelNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPowerTrain1"

        android:layout_marginTop="10dp"
        android:textColor="#333359"
        android:textStyle="bold"
        android:hint="Wheel number"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvWheelFrame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Wheel Frame"
        android:textSize="20dp"
        android:textColor="#333359"
        android:textStyle="bold"
        android:layout_below="@+id/tvWheelNumber"
         />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Timestamp"
        android:textSize="20dp"
        android:textColor="#333359"
        android:textStyle="bold"
        android:layout_below="@+id/tvWheelFrame1"
         />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnReportHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Report History"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
