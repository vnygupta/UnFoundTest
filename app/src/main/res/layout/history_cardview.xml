<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#00FFFB"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/ivVehicle1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:layout_below="@+id/ivVehicle1"
                android:id="@+id/tvVehicleName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Vehicle name"
                android:textColor="#333359"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvvehicleID2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvVehicleName2"
                android:textColor="#333359"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:hint="Vehicle ID"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvFrame2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvvehicleID2"
                android:textColor="#333359"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:hint="Frame"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvPowerTrain2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Power Train"
                android:textSize="20dp"
                android:textColor="#333359"
                android:textStyle="bold"
                android:layout_below="@+id/tvFrame2"
                />

            <TextView
                android:id="@+id/tvWheelNumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPowerTrain2"
                android:textColor="#333359"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:hint="Wheel number"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvWheelFrame2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Wheel Frame"
                android:textSize="20dp"
                android:textColor="#333359"
                android:textStyle="bold"
                android:layout_below="@+id/tvWheelNumber2"
                />

            <TextView
                android:id="@+id/tvTimeStamp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Timestamp"
                android:textSize="20dp"
                android:textColor="#333359"
                android:textStyle="bold"
                android:layout_below="@+id/tvWheelFrame2"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>